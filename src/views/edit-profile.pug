extends base

block content
     form(method="POST", enctype="multipart/form-data").edit-profile__form
        lable(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept=".png, .jpg, .jepg")
        input(name="name",value=loggedInUser.name type="text", placeholder="Name" required)
        input(name="email",value=loggedInUser.email type="email", placeholder="E-mail" required)
        input(name="username",value=loggedInUser.username type="text", placeholder="User Name" required)
        input(name="location",value=loggedInUser.location type="text", placeholder="Location" required)
        input(type="submit", value="Update Prfile")
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr; 